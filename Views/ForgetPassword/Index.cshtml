@{
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-image: url('/image/loginback.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
        }

        .login-container {
            background-color: rgb(255 255 255 / 32%);
            border-radius: 12px;
            padding: 40px 50px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 380px;
        }

        .btn-login {
            background-color: #002046;
            color: white;
            width: 100%;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px;
        }

            .btn-login:hover {             
                border: 2px solid #7dbbff;
                color: #7dbbff;
            }

        .forgot-password, .register-link {
            text-align: center;
            margin-top: 15px;
        }

            .forgot-password a, .register-link a {
                color: #6bdeeb;
            }

                .forgot-password a:hover, .register-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-container">
        <h2 class="text-center">Forgot Password</h2>
     
        <div class="error-message" id="error-message" style="display: none;">
            Invalid username or password. Please try again.
        </div>

        <form action="/Account/ForgotPass" method="post" id="ForgotPass">
        
            <div class="form-group">
                <label for="username">Phone No</label>
                <input type="text" class="form-control" id="PhoneNo" name="Phone No" required>
            </div>

          
            <div class="form-group">
                <label for="password">OTP</label>
                <input type="text" class="form-control" id="OTP" name="OTP" required>
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-login mt-4" id="SendOtp">Send OTP</button>
                
        </form>
    </div>

    <!-- Optional JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {

    
        $('#SendOtp').on('click', function (e) {
            e.preventDefault(); 

           
            var randomCode = generateRandomCode();

         
            $('#OTP').text(randomCode);
        });

       
        function generateRandomCode() {
            return Math.floor(1000 + Math.random() * 9000); 
        }

    });
</script>

